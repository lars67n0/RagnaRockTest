@page
@model razor_pages_eksamen_fis.Pages.RockSound.IndexModel

@{
    ViewData["Title"] = "Information PlayList";
}

<h1>Rock Information Playlist</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Last Changed
                
            </th>
            <th>
                Release Date
            </th>
            <th>
                Time Period
            </th>
            <th>
                Sound Info
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SoundList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoundName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealeaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoundInfo)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
